<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
  caption="msg://caption"
  class="com.rtcab.cesdv.web.screens.DefaultValuesScreen"
  messagesPack="com.rtcab.cesdv.web.screens">
  <layout expand="buttonsPanel" spacing="true">
    <vbox id="input" width="200px" spacing="true">
      <textField width="100%" id="nameField" caption="msg://name"/>
      <dateField width="100%" id="dueDateField" caption="msg://dueDate"/>
      <pickerField width="100%" id="customerField" metaClass="cesdv$Customer" caption="msg://customer"/>
    </vbox>
    <buttonsPanel id="buttonsPanel">
      <button id="saveBtn" invoke="save" caption="mainMsg://actions.Ok"/>
      <button id="cancelBtn" invoke="cancel" caption="mainMsg://actions.Cancel"/>
    </buttonsPanel>
  </layout>
</window>
